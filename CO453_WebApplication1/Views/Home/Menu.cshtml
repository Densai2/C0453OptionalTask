@model CO453_WebApplication1.Models.Menu

@{
    ViewData["Title"] = "Menu";
}

<h1>Menu</h1>

<h4>Type in the food and drinks you'd like!</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Menu">
