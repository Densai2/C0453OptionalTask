            </div>
            <div class="form-group">
                <label asp-for="Main" class="control-label"></label>
                <input asp-for="Main" class="form-control" />
                <span asp-validation-for="Main" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dessert" class="control-label"></label>
                <input asp-for="Dessert" class="form-control" />
                <span asp-validation-for="Dessert" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Drink" class="control-label"></label>
                <input asp-for="Drink" class="form-control" />
                <span asp-validation-for="Drink" class="text-danger"></span>
            </div>
